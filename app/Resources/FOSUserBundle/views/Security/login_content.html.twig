{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="card row" style="padding: 20px;">
    <div class="card-content">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="input-field col s6">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                <label for="username">Login</label>
            </div>

            <div class="input-field col s6">
                <input type="password" id="password" name="_password" required="required" />
                <label for="password">Password</label>
            </div>

            <div class="col s6 push-s6">
                <input type="checkbox" class="filled-in" id="remember_me" checked="checked" name="_remember_me" value="on"/>
                <label for="remember_me">Se souvenir de moi</label>
            </div>

            <div class="col s6 pull-s6">
                <button class="btn waves-effect waves-light" type="submit" name="action">Se Connecter</button>
            </div>
        </form>
    </div>
</div>
